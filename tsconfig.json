{
  "compilerOptions": {
    "outDir": "build/dist",
    "module": "commonjs",
    "target": "es5",
    "lib": [
      "es6",
      "dom",
      "esnext.asynciterable",
      "es2017"
    ],
    "sourceMap": true,
    "allowJs": true,
    "jsx": "react",
    "baseUrl": ".",
    "experimentalDecorators": true,
    "paths": {
      "@root/*": [
        "client/*"
      ],
      "@lib/*": [
        "client/lib/*"
      ],
      "@services": [
        "client/services"
      ],
      "@components": [
        "client/components"
      ],
      "@styles/*": [
        "client/styles/*"
      ],
      "@ducks": [
        "client/ducks"
      ],
      "@ducks/*": [
        "client/ducks/*"
      ],
    }
  },
  "exclude": [
    "node_modules",
    "build",
    "scripts",
    "acceptance-tests",
    "webpack",
    "jest",
    "setupTests.ts",
    "config"
  ],
  "types": [
    "typePatches"
  ]
}