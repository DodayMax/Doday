{
    "compileOnSave": false,
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "target": "es6",
        "moduleResolution": "node",
        "noImplicitAny": true,
        "sourceMap": true,
        "rootDir": "../",
        "outDir": "../",
        "baseUrl": ".",
        "paths": {
            "*": [
                "../node_modules/*",
                "./src/types/*"
            ]
        }
    },
    "include": [
        "./**/*.ts"
    ],
    "exclude": [
        "../node_modules",
        "../dist",
        "../client",
        "../test"
    ]
}