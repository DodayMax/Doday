{
  "compilerOptions": {
    "outDir": "build/dist",
    "module": "commonjs",
    "target": "es5",
    "lib": ["es6", "dom", "esnext.asynciterable", "es2017"],
    "sourceMap": true,
    "allowJs": true,
    "jsx": "react",
    "baseUrl": ".",
    "experimentalDecorators": true,
    "paths": {
      "@root/*": ["src/*"],
      "@lib/*": ["src/lib/*"],
      "@services": ["src/services"],
      "@components": ["src/components"],
      "@styles/*": ["src/styles/*"],
      "@ducks": ["src/ducks"],
      "@ducks/*": ["src/ducks/*"]
    }
  },
  "exclude": [
    "node_modules",
    "build",
    "scripts",
    "acceptance-tests",
    "webpack",
    "jest",
    "setupTests.ts",
    "config",
    "server"
  ],
  "types": ["typePatches"]
}
